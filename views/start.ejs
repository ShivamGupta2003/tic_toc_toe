<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game</title>
    <!-- Bootstrap CSS (from CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">  <!-- Optional: Your custom CSS -->
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Game</h1>
       
        <form action="/start-game" method="POST">
            <div class="row">
                <!-- Player 1 Name -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="player1-name" class="form-label">Player 1 Name</label>
                        <input type="text" class="form-control" id="player1-name" name="player1-name" required>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="player2-name" class="form-label">Player 2 Name</label>
                        <input type="text" class="form-control" id="player2-name" name="player2-name" required>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="player1-symbol" class="form-label">Player 1 Symbol</label><br>
                        <label class="form-check-label me-3">
                            <input type="radio" class="form-check-input" name="player1-symbol" value="X" checked onchange="updatePlayer2Symbol()"> X
                        </label>
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="player1-symbol" value="O" onchange="updatePlayer2Symbol()"> O
                        </label>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="player2-symbol" class="form-label">Player 2 Symbol</label><br>
                        <label class="form-check-label me-3">
                            <input type="radio" class="form-check-input" name="player2-symbol" value="X" disabled> X
                        </label>
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="player2-symbol" value="O" disabled> O
                        </label>
                    </div>
                </div>
             
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary">Start Game</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS (Optional for form behavior, modal, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // JavaScript function to update Player 2 symbol based on Player 1 selection
        function updatePlayer2Symbol() {
            const player1Symbol = document.querySelector('input[name="player1-symbol"]:checked').value;
            const player2X = document.querySelector('input[name="player2-symbol"][value="X"]');
            const player2O = document.querySelector('input[name="player2-symbol"][value="O"]');
    
            if (player1Symbol === 'X') {
                player2X.checked = false;
                player2O.checked = true;
            } else {
                player2X.checked = true;
                player2O.checked = false;
            }
        }
    
        
        window.onload = updatePlayer2Symbol;
    </script>
</body>
</html>
